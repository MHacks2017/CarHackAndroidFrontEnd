<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLite"
    tools:context="com.carhackers.carhack.MoneyActivity">

    <TextView
        android:id="@+id/balance_text"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Balance"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorCompliment"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/balance_amount_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balance_text"
        android:layout_centerHorizontal="true"
        android:text="0.0"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorCompliment"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:id="@+id/total_text"
        android:layout_height="wrap_content"
        android:text="Total Amount Made"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/balance_amount_text"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorCompliment"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/total_amount_text"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorCompliment"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/total_text"
        android:layout_alignStart="@+id/balance_amount_text" />

    <TextView
        android:id="@+id/recent_total_text"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorCompliment"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Total Amount Earned In Past 30 Days"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_above="@+id/recent_total_amount_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/recent_total_amount_text"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorCompliment"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/total_amount_text"
        android:layout_marginBottom="100dp" />
</RelativeLayout>
