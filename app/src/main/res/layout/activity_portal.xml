<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackgroundLite"
    android:layout_height="match_parent"
    tools:context="com.carhackers.carhack.PortalActivity">


    <TextView
        android:id="@+id/big_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="44sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/welcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/warm_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_below="@+id/big_welcome"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40sp"
        android:textColor="#ffffff"
        android:layout_marginTop="10sp"
        android:text="@string/welcome_message" />

    <Button
        android:id="@+id/owner_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/warm_welcome"
        android:layout_below="@+id/warm_welcome"
        android:layout_marginTop="42dp"
        android:onClick="ownerBtnOnClick"
        android:text="Owner" />

    <Button
        android:id="@+id/guest_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/owner_btn"
        android:layout_centerVertical="true"
        android:onClick="guestBtnOnClick"
        android:text="Guest" />


</RelativeLayout>
